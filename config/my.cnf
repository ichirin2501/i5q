[mysqld]

max_allowed_packet=300M

query_cache_type        = 0
query_cache_size        = 0
query_cache_limit       = 0

skip-name-resolve

#slow_query_log      = 1
#slow_query_log_file = /var/lib/mysql/mysqld-slow.log
#long_query_time     = 0.0

innodb_flush_log_at_trx_commit = 0
innodb_flush_method=O_DIRECT

innodb_buffer_pool_size = 3G
